<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.unisinos.evertonlucas.passshelter.app.ResourceActivity">

    <TextView
        android:textSize="@dimen/font_title_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="@string/lblTitleResource" />

    <TextView
        android:textSize="@dimen/font_size_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_button_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="@string/lblResource" />

    <EditText
        android:id="@+id/txtActivityResource"
        android:textSize="@dimen/font_size_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_app_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="" />

    <TextView
        android:textSize="@dimen/font_size_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_button_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="@string/lblUser" />

    <EditText
        android:id="@+id/txtActivityUser"
        android:textSize="@dimen/font_size_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_app_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="" />

    <TextView
        android:textSize="@dimen/font_size_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_button_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="@string/lblPassword" />

    <EditText
        android:id="@+id/txtActivityPassword"
        android:textSize="@dimen/font_size_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_app_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1">

        <Button
            android:id="@+id/btnSaveResource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnSaveResource"
            android:text="@string/txt_create_user"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/top_button_margin"
            android:layout_marginRight="@dimen/horizontal_app_margin" />

    </GridLayout>

</LinearLayout>
