<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.unisinos.evertonlucas.passshelter.app.NewGroupActivity">

    <TextView
        android:textSize="@dimen/font_size_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_button_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="@string/lbl_name_group" />

    <EditText
        android:id="@+id/txtNameNewGroup"
        android:textSize="@dimen/font_size_resource"
        android:inputType="textCapSentences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_app_margin"
        android:layout_marginRight="@dimen/horizontal_app_margin"
        android:text="" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1">

        <Button
            android:id="@+id/btnVerifyNameNewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnVerifyNameNewGroup"
            android:text="@string/lbl_next_step_new_group"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/top_button_margin"
            android:layout_marginRight="@dimen/horizontal_app_margin" />

    </GridLayout>

</LinearLayout>
